/* pages/device/device.wxss */
.noType {
  text-align: center;
  font-size: 60rpx;
  margin-top: 60rpx;
}

.warning {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.945);
  overflow: auto;
}

.alert {
  font-size: 40rpx;
  margin: 50rpx;
  overflow: auto;
  height: 80%;
}

.button {
  width: 50%;
}

.pickerContainer {
  display: flex;
  flex-direction: row;
  background-color: gainsboro;
}

.picker {
  font-size: 35rpx;
  margin: 20rpx 5rpx 20rpx 10rpx;
  min-width: 220rpx;
  max-width: 310rpx;
  height: 56rpx;
  overflow: hidden;
}

.triangle {
  width: 0;
  height: 0;
  border: 10rpx solid;
  border-color: #00bfff transparent transparent;
  margin: 40rpx 20rpx 0 0;
}

.filter {
  margin: 10rpx 20rpx;
  border-radius: 40rpx;
  background-color: #82cee8;
  box-shadow: 0 0 8px rgba(0, 0, 0, 1);
  font-size: 35rpx;
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
}

.entry {
  width: 100%;
  height: 30%;
  display: flex;
}

.left {
  font-size: 50rpx;
  width: 40rpx;
  display: flex;
  align-items: center;
  border-left: 15rpx solid #a8e5fa;
  margin: 20rpx 0;
}

.rightAppointed {
  flex: 1;
  margin: 20rpx;
  background-color: #82cee8;
  box-shadow: 0 0 8px rgba(0, 0, 0, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}

.rightNoAppointed {
  flex: 1;
  margin: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
