/* pages/components/detail/detail.wxss */
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.7);
}
.block{
  position: absolute;
  width: 620rpx;
  height: 800rpx;
  background-color: #4B5940;
  border-radius: 5px;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: white;
  padding: 20rpx;
  font-size: 40rpx;
  overflow: scroll;
  box-shadow: 0 0 8px rgba(0, 0, 0, 1);
}
.image{
  width: 200rpx;
  height: 300rpx;
}
.memberInfo{
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.info{
  flex: 1;
}