/* pages/login/login.wxss */
.content {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: gainsboro;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginBlock {
  position: absolute;
  width: 60%;
  height: 60%;
  background-color: #1694d8;
  border-radius: 7px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 1);
  padding: 0 10px 10px 10px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  /* transform: translateX(-50px); */
}

.logonBlock {
  position: absolute;
  width: 60%;
  height: 60%;
  background-color: #f0dc6d;
  border-radius: 7px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 1);
  padding: 0 10px 10px 10px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  transform: translateX(50px);
}

.loginText {
  font-size: xx-large;
  width: 100%;
  text-align: left;
  color: white;
}
.logonText {
  font-size: xx-large;
  width: 100%;
  text-align: right;
  color: black;
}
.input {
  border-bottom: 1px solid black;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  color: white;
}

.button {
  width: 50%;
}
